// This is your Prisma schema file for the AI-Powered Kanban application

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model (managed by Supabase Auth, but we reference it)
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects              Project[]
  columns               Column[]
  tags                  Tag[]
  aiRecommendations     AIRecommendation[]
  workspaceMemberships  WorkspaceMember[]
  sentInvitations       WorkspaceInvitation[] @relation("InvitedBy")

  @@map("users")
}

// Workspace: Shared container for team collaboration
model Workspace {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members       WorkspaceMember[]
  invitations   WorkspaceInvitation[]
  projects      Project[]
  columns       Column[]
  tags          Tag[]
  aiRecommendations AIRecommendation[]

  @@map("workspaces")
}

// WorkspaceMember: Junction table for User â†” Workspace membership
model WorkspaceMember {
  id          String   @id @default(uuid())
  workspaceId String
  userId      String
  role        MemberRole @default(MEMBER)
  joinedAt    DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@index([userId])
  @@index([workspaceId])
  @@map("workspace_members")
}

enum MemberRole {
  OWNER
  MEMBER
}

// WorkspaceInvitation: Email-based invitations to join workspace
model WorkspaceInvitation {
  id          String   @id @default(uuid())
  workspaceId String
  email       String
  invitedById String
  token       String   @unique
  expiresAt   DateTime
  acceptedAt  DateTime?
  createdAt   DateTime @default(now())

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  invitedBy   User      @relation("InvitedBy", fields: [invitedById], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([email])
  @@index([token])
  @@map("workspace_invitations")
}

// Project: Top-level container
model Project {
  id             String        @id @default(uuid())
  workspaceId    String
  userId         String
  name           String
  description    String?
  status         ProjectStatus @default(ACTIVE)
  statusColumnId String?
  priority       Int           @default(0) // Higher number = higher priority
  sortOrder      Int           @default(0)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  archivedAt     DateTime?

  workspace    Workspace   @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  statusColumn Column?     @relation("ProjectColumn", fields: [statusColumnId], references: [id])
  milestones   Milestone[]

  @@index([workspaceId, status])
  @@index([workspaceId, sortOrder])
  @@index([workspaceId, priority])
  @@index([userId, status])
  @@index([statusColumnId])
  @@map("projects")
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
}

// Milestone: Major deliverables within a project
model Milestone {
  id                   String    @id @default(uuid())
  projectId            String
  name                 String
  description          String?
  value                Priority  @default(MEDIUM)
  urgency              Priority  @default(MEDIUM)
  effort               Effort    @default(MEDIUM)
  statusColumnId       String
  priorityScore        Float?
  priority             Int       @default(0) // Higher number = higher priority within project
  dependsOnMilestoneId String?
  sortOrder            Int       @default(0)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  project            Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  statusColumn       Column      @relation("MilestoneColumn", fields: [statusColumnId], references: [id])
  dependsOnMilestone Milestone?  @relation("MilestoneDependency", fields: [dependsOnMilestoneId], references: [id], onDelete: SetNull)
  blockedMilestones  Milestone[] @relation("MilestoneDependency")
  tasks              Task[]

  @@index([projectId, statusColumnId])
  @@index([statusColumnId, sortOrder])
  @@index([priorityScore])
  @@index([projectId, priority])
  @@map("milestones")
}

// Task: Atomic work units (subtasks)
model Task {
  id              String    @id @default(uuid())
  milestoneId     String
  name            String
  description     String?
  value           Priority  @default(MEDIUM)
  urgency         Priority  @default(MEDIUM)
  effort          Effort    @default(SMALL)
  statusColumnId  String
  priority        Int       @default(0) // Higher number = higher priority within milestone
  priorityScore   Float?
  dependsOnTaskId String?
  completedAt     DateTime?
  sortOrder       Int       @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  milestone     Milestone @relation(fields: [milestoneId], references: [id], onDelete: Cascade)
  statusColumn  Column    @relation("TaskColumn", fields: [statusColumnId], references: [id])
  dependsOnTask Task?     @relation("TaskDependency", fields: [dependsOnTaskId], references: [id], onDelete: SetNull)
  blockedTasks  Task[]    @relation("TaskDependency")
  tags          TaskTag[]

  @@index([milestoneId, statusColumnId])
  @@index([statusColumnId, sortOrder])
  @@index([priorityScore])
  @@index([completedAt])
  @@map("tasks")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Effort {
  SMALL
  MEDIUM
  LARGE
}

// Column: Kanban board columns
model Column {
  id          String    @id @default(uuid())
  workspaceId String
  userId      String
  name        String
  key         ColumnKey
  sortOrder   Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  workspace  Workspace   @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects   Project[]   @relation("ProjectColumn")
  milestones Milestone[] @relation("MilestoneColumn")
  tasks      Task[]      @relation("TaskColumn")

  @@unique([workspaceId, key])
  @@index([workspaceId, sortOrder])
  @@index([userId])
  @@map("columns")
}

enum ColumnKey {
  PROJECTS
  MILESTONES
  BACKLOG
  WORKING
  READY_TEST
  AGENT_TESTING
  DEPLOYED_TESTING
  COMPLETED
}

// Tag: Labels for categorization
model Tag {
  id          String   @id @default(uuid())
  workspaceId String
  userId      String
  name        String
  color       String   @default("#3b82f6")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  taskTags  TaskTag[]

  @@unique([workspaceId, name])
  @@index([workspaceId])
  @@index([userId])
  @@map("tags")
}

// TaskTag: Many-to-many relationship between tasks and tags
model TaskTag {
  taskId    String
  tagId     String
  createdAt DateTime @default(now())

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([taskId, tagId])
  @@index([tagId])
  @@map("task_tags")
}

// AIRecommendation: Audit log for AI analysis
model AIRecommendation {
  id             String   @id @default(uuid())
  workspaceId    String
  userId         String
  inputSnapshot  Json
  topTasks       Json
  suggestedMoves Json
  themes         Json
  promptVersion  String
  tokensUsed     Int
  durationMs     Int
  createdAt      DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workspaceId, createdAt])
  @@index([userId, createdAt])
  @@map("ai_recommendations")
}
